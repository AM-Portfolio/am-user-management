# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/am_user_management
DB_HOST=localhost
DB_PORT=5432
DB_NAME=am_user_management
DB_USER=user
DB_PASSWORD=password

# Redis Configuration  
REDIS_URL=redis://localhost:6379/0

# Application Configuration
SECRET_KEY=your-secret-key-here
DEBUG=true
LOG_LEVEL=INFO
ENVIRONMENT=development

# Email Service Configuration
EMAIL_SERVICE_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# JWT Configuration
JWT_SECRET_KEY=jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# Feature Flags
ENABLE_ACCOUNT_MANAGEMENT=true
ENABLE_USER_PROFILE=true
ENABLE_SUBSCRIPTION=true
ENABLE_PERMISSIONS_ROLES=true

# Security Settings
PASSWORD_MIN_LENGTH=8
EMAIL_VERIFICATION_ENABLED=true
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_MINUTES=15

# Subscription Settings
TRIAL_DAYS=14
DEFAULT_CURRENCY=USD
AUTO_RENEW_ENABLED=true

# Profile Settings
MAX_BIO_LENGTH=500
ALLOWED_PICTURE_FORMATS=jpg,png,jpeg

# Permissions Settings
DEFAULT_ROLE=viewer